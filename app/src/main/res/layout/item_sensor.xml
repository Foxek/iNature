<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sensor_item_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:background="?android:selectableItemBackground"
    app:cardCornerRadius="25dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/sensor_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/sensor_item_logo"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="16dp"
            android:transitionName="imageTransition"
            app:layout_constraintBottom_toBottomOf="@+id/sensor_item_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/sensot_item_name"
            tools:ignore="ContentDescription"
            tools:targetApi="lollipop" />

        <ImageView
            android:id="@+id/sensor_item_select_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/btn_round_bg"
            android:padding="5dp"
            android:translationZ="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/sensor_item_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/sensot_item_name"
            app:srcCompat="@drawable/ic_menu_arrow_right_black"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/sensot_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/roboto_condensed_bold"
            android:textAllCaps="true"
            android:textColor="@color/colorDark"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/sensor_item_description"
            app:layout_constraintEnd_toStartOf="@+id/sensor_item_select_button"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/sensor_item_logo"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sensor_item_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/roboto_condensed_regular"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/sensor_item_select_button"
            app:layout_constraintStart_toEndOf="@+id/sensor_item_logo"
            app:layout_constraintTop_toBottomOf="@+id/sensot_item_name" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>